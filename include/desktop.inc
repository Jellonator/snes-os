; Full size of desktop in tiles (including taskbar)
.DEFINE DESKTOP_FULL_WIDTH_TILES 26
.DEFINE DESKTOP_FULL_HEIGHT_TILES 24

; Usable size of desktop by (outer border of) windows
.DEFINE DESKTOP_WINDOW_WIDTH_TILES 26
.DEFINE DESKTOP_WINDOW_HEIGHT_TILES 22

; True content area of desktop
.DEFINE DESKTOP_CONTENT_WIDTH_TILES 24
.DEFINE DESKTOP_CONTENT_HEIGHT_TILES 20

; Maximum outer size (in tiles) of a window
.DEFINE WINDOW_MAXIMUM_WIDTH DESKTOP_WINDOW_WIDTH_TILES
.DEFINE WINDOW_MAXIMUM_HEIGHT DESKTOP_WINDOW_HEIGHT_TILES

; minimum outer size (in tiles) of a window
.DEFINE WINDOW_MINIMUM_WIDTH 6
.DEFINE WINDOW_MINIMUM_HEIGHT 6

; Maximum number of windows
.DEFINE MAX_WINDOW_COUNT 16

; Size of a single tile in the desktop
.DEFINE DESKTOP_TILE_WIDTH_PX 16
.DEFINE DESKTOP_TILE_HEIGHT_PX 16

; Minimum and maximum window positions
.DEFINE WINDOW_MINIMUM_X 3
.DEFINE WINDOW_MINIMUM_Y 2
.DEFINE WINDOW_MAXIMUM_X 28
.DEFINE WINDOW_MAXIMUM_Y 23

; Draw buffer size
.DEFINE WINDOW_DRAW_BUFFER_ELEMENTS 64
.DEFINE WINDOW_DRAW_BUFFER_ELEMENT_SIZE 128
.DEFINE WINDOW_DRAW_BUFFER_TOTAL_SIZE (WINDOW_DRAW_BUFFER_ELEMENT_SIZE * WINDOW_DRAW_BUFFER_ELEMENTS)

; Parameters for creating a window
.STRUCT desktop_window_create_params_t
    width db
    height db
    pos_x db
    pos_y db
    ; Function that is called when rendering a single tile
    ; renderTile([x8]WID window, [s8]int x, [s8] int y)
    renderTile dl
.ENDST

.STRUCT window_tile_buffer_t SIZE 4
    vramAddr dw
    data dw
.ENDST

.DEFINE DESKTOP_BG1_CHAR_BASE_ADDR $1000
.DEFINE DESKTOP_BG2_CHAR_BASE_ADDR $0000
.DEFINE DESKTOP_OBJ1_CHAR_BASE_ADDR $0000
.DEFINE DESKTOP_OBJ2_CHAR_BASE_ADDR $1000
.DEFINE DESKTOP_BG1_TILE_BASE_ADDR $0800
.DEFINE DESKTOP_BG2_TILE_BASE_ADDR $0C00

.DEFINE MIN_MOUSE_COORD_X (WINDOW_MINIMUM_X*8)
.DEFINE MIN_MOUSE_COORD_Y (WINDOW_MINIMUM_Y*8)
.DEFINE MAX_MOUSE_COORD_X ((WINDOW_MINIMUM_X+DESKTOP_FULL_WIDTH_TILES)*8-1)
.DEFINE MAX_MOUSE_COORD_Y ((WINDOW_MINIMUM_Y+DESKTOP_FULL_HEIGHT_TILES)*8-1)
